/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  height: 30px;
  width: 100%;
  position:fixed;
  top: 0px;
}

.tab-item {
  font-size: 30rpx;
  padding: 5px;
}

.su-tab-header{
  background-color: white;
}
.tab-active{
  color: #007FFF; 
}

.post-list-page {
  background-color: ghostwhite;
  margin-top: 40px;
}

.post {
  min-height: 40px;
  display: flex;
  flex-direction: column;
  padding: 8px;
  border-radius: 8px;
  background-color: white;
  margin: 4px;
}