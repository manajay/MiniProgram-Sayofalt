  <view class="header">
    <l-segment bind:linchange="changeTabs" has-line scrollable 
    l-active-class="tab-active"
    l-header-class="su-tab-header"
    >
        <l-segment-item
        has-line
         wx:for="{{tag_list}}" 
         wx:key="index"
         key="{{item.id}}"
         slot="{{item.id}}"
         width="auto"
         data-cell="{{item.slug}}"
         animated-for-line
         >
          <view class="tab-item">
            <view>{{item.name}}</view>
          </view>
        </l-segment-item>
    </l-segment>
  </view>

  <!-- list -->
  <view class="post-list-page">
    <view class="post" wx:for="{{post_list}}" wx:key="id" bind:tap="enterDetail" data-item="{{item}}">
      <post-item item="{{item}}" />
    </view>
    <l-loadmore show="{{loadingMore}}"></l-loadmore>
    <view wx:if="{{hasReachFinalPost}}">已经到最后一条了</view>
  </view>
</view>