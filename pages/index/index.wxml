<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <!-- <block wx:else>
    </block> -->
  </view>

  <!-- list -->
  <view class="postList" wx:if="{{hasUserInfo}}">
      <mp-cells ext-class="post-cells">
        <block wx:for="{{post_list}}" wx:key="id">
          <mp-cell>
            <view>{{item.title}}</view>
            <view slot="foot">{{item.excerpt}}</view>
          </mp-cell>
        </block>
      </mp-cells>
  </view>
</view>
