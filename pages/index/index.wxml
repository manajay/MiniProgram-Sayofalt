      <view class="header-view">
        <cover-image wx:if="{{!!item.feature_image}}" class="cover" src="{{item.feature_image}}" />
        <view class="post-info">
          <view class="post-title">{{item.title}}</view>
          <view class="post-excerpt">{{item.excerpt}}</view>
        </view>
      </view>
      <view class="footer">
