/* pages/comment/comment.wxss */
Page {
  background-color: lightgray;
}

.container {
  padding: 0rpx;
}

.cells {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.cell {
  width: 100%;
  margin: 0rpx;
  padding: 0rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(223, 222, 222);
}

.cell-comment {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 0rpx;
  padding: 0rpx;
}

.cell_hd {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
  padding: 0rpx;
}

.comment-user_avatar {
  padding-left: 0rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.cell_hd-name-time {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.comment-user_name {
  color: black;
  padding-left: 20rpx;
  font-size: 35rpx;
}

.comment-time {
  color: orange;
  padding-left: 20rpx;
  font-size: 24rpx;
}

.comment-content {
  color: green;
  margin: 20rpx;
  margin-top: 0rpx;
  padding-left: 100rpx;
  font-size: 36rpx;
}

.cell-bottom-line {
  height: 3rpx;
  width: 100%;
  background-color: lightblue;
}

.cell-approve {
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-u {
  color: gray;
  padding-left: 20rpx;
}

.comment-t {
  color: gray;
  padding-left: 20rpx;
}
